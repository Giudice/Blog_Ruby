<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%# Pour chaque utilisateu on affiche son nom, son prenom, et son email%>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nom %></td>
        <td><%= user.prenom %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <%# Si l'utilisateur est connectÃ© il peux modifier uniquement son compte%>
        <% if user_signed_in? && current_user.nom==user.nom %>
          <td><%= link_to 'Edit',  edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

